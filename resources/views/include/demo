        @foreach ($product as $product)
        @php
        $updatedDate = \Carbon\Carbon::parse($product->updated_at);
        $today = \Carbon\Carbon::today();
        $diffInMonths = $today->diffInMonths($updatedDate);
        $boxClass = '';
        if ($diffInMonths >= 3) {
            $boxClass = 'bg-brickred';
        } elseif ($diffInMonths >= 1) {
            $boxClass = 'bg-lightyellow';
        }
        @endphp
        <div class="col-md-6 mb-3">
            <div class="card custom-card {{ $boxClass }} shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-white">{{ $product->name }}</h5> <!-- Add text-white class to set the text color to white -->
                    <ul class="list-unstyled">
                        <li><strong>Rate:</strong> {{ $product->rate }}</li>
                        <li><strong>Notes:</strong> {{ $product->notes}}</li>
                    </ul>
                    <a href="{{url('viewproduct/'.$product->id)}}" class="btn btn-primary">View</a>


                </div>
            </div>
        </div>
        @endforeach
    </div>
</div>



<script>
    function confirmDelete() {
        // Show a confirmation dialog
        const result = confirm('Are you sure you want to delete this item?');
        // If the user confirms, proceed with the deletion
        if (result) {
            return true;
        } else {
          // If the user cancels, prevent the default link action (no data deletion)
            return false;
        }
    }
</script>



