    <script>
        // Initially hide the registration form and set the "Login" button as selected
        document.getElementById("registrationForm").style.display = "none";
        document.querySelector(".toggle-button:first-of-type").classList.add("selected");

        function toggleMenu() {
            var menuContainer = document.getElementById("menuContainer");
            if (menuContainer.style.display === "block") {
                menuContainer.style.display = "none";
            } else {
                menuContainer.style.display = "block";
                menuBox.onclick = function (event) {
                    event.stopPropagation();
                };
                menuContainer.onclick = function () {
                    toggleMenu();
                };
            }
            showLoginForm();
        }






        function openRegistration() {
        var menuContainer = document.getElementById("menuContainer");
        if (menuContainer.style.display === "block") {
            menuContainer.style.display = "none";
        } else {
            menuContainer.style.display = "block";
            menuBox.onclick = function (event) {
                event.stopPropagation();
            };
            menuContainer.onclick = function () {
                openRegistration();
            };
        }
        showRegistrationForm(); // Always show the registration form when "Open Register" is clicked
    }




        function showLoginForm() {
            var loginForm = document.getElementById("loginForm");
            var registrationForm = document.getElementById("registrationForm");
            loginForm.style.display = "block";
            registrationForm.style.display = "none";

            // Apply styles to the buttons
            document.querySelector(".toggle-button:nth-of-type(1)").classList.add("selected");
            document.querySelector(".toggle-button:nth-of-type(2)").classList.remove("selected");
        }

        function showRegistrationForm() {
            var loginForm = document.getElementById("loginForm");
            var registrationForm = document.getElementById("registrationForm");
            loginForm.style.display = "none";
            registrationForm.style.display = "block";

            // Apply styles to the buttons
            document.querySelector(".toggle-button:nth-of-type(1)").classList.remove("selected");
            document.querySelector(".toggle-button:nth-of-type(2)").classList.add("selected");
        }
    </script>

</body>
</html>
















code for user icon in welcome page with first two letter of users name

















































































































<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>


.user-icon-container {
            position: absolute;
            top: 0;
            right: 0;
            padding: 10px;
        }


        .user-icon {
            background-color: #2196F3;
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 20px;
            cursor: pointer; /* Add cursor style to indicate it's clickable */
            position: relative; /* Make the user icon a positioned element */
        }

        .user-dropdown {
            display: none;
            position: absolute;
            background-color: #fff;
            min-width: 160px;
            box-shadow: 0 4px 6px 0 rgba(0, 0, 0, 0.2);
            z-index: 1;
            top: 100%; /* Position dropdown below the user icon */
            right: 0; /* Align dropdown with the left edge of the user icon */
        }

        .user-dropdown a {
            padding: 10px;
            text-decoration: none;
            display: block;
        }

        .user-dropdown a:hover {
            background-color: #f2f2f2;
        }







        .user-dropdown i {
        color: rgb(0, 0, 0); /* Change 'blue' to the color you want */
    }

    /* Change the color of the text in the links */
    .user-dropdown a {
        color: rgb(0, 0, 0); /* Change 'red' to the color you want */
        padding: 15px 10px;
    }

    .user-dropdown a:hover {
        background-color: #dad7d7;
    }









    </style>

</head>
<body>

    <div class="user-icon-container">

<div class="user-icon" id="userIcon">
    {{ strtoupper(substr(Auth::user()->name, 0, 1)) }}
    <div class="user-dropdown" id="userDropdown">
        <a href="#"><i class="fas fa-user"></i> My Account</a>
        <a href="#"><i class="fas fa-heart"></i> My Ads</a>
        <a href="#"><i class="fas fa-question-circle"></i> Help</a>
        <a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
</div>

</div>

<script>
    var userIcon = document.getElementById('userIcon');
    var userDropdown = document.getElementById('userDropdown');

    userIcon.addEventListener('click', function(e) {
        e.stopPropagation(); // Prevent the click event from propagating to the window.onclick
        if (userDropdown.style.display === 'block') {
            userDropdown.style.display = 'none';
        } else {
            userDropdown.style.display = 'block';
        }
    });

    // Close the dropdown when the user clicks outside of it
    window.onclick = function(event) {
        if (event.target !== userIcon) {
            userDropdown.style.display = 'none';
        }
    }
</script>

</body>
</html>




































































