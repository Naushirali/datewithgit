    <div class="navbar">
        <div class="menu-icon" id="menu-icon">
            <div class="bar" id="bar1"></div>
            <div class="bar" id="bar2"></div>
            <div class="bar" id="bar3"></div>
        </div>
        <div class="menu" id="menu">
            <div class="menu-button">
                <a href="{{ route('login') }}" id="login-button">üîí Login</a>
            </div>
            <div class="menu-button">
